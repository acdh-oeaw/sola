{
  "extends": "@stefanprobst/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "exactOptionalPropertyTypes": false,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    }
  },
  "include": ["./next-env.d.ts", "./**/*.ts", "./**/*.tsx", "./*.config.mjs", "./*.config.cjs"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  }
}
